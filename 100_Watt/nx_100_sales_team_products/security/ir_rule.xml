<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Record rule: Sales Managers see ALL products -->
        <record id="product_template_sales_manager_rule" model="ir.rule">
            <field name="name">Product Template: Sales Manager - All Access</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="product_product_sales_manager_rule" model="ir.rule">
            <field name="name">Product Variant: Sales Manager - All Access</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record rule: Filter products for salespersons based on team assignment only -->
        <record id="product_template_sales_team_rule" model="ir.rule">
            <field name="name">Product Template: Sales Team Filter</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">['|',
                ('use_sales_team_filter', '=', False),
                '|',
                    ('sales_team_ids', '=', False),
                    ('sales_team_ids', 'in', user.sale_team_id.ids)
            ]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="product_product_sales_team_rule" model="ir.rule">
            <field name="name">Product Variant: Sales Team Filter</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="domain_force">['|',
                ('product_tmpl_id.use_sales_team_filter', '=', False),
                '|',
                    ('product_tmpl_id.sales_team_ids', '=', False),
                    ('product_tmpl_id.sales_team_ids', 'in', user.sale_team_id.ids)
            ]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>

