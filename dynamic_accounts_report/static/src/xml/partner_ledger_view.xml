<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <!-- Partner Ledger List View (Owl Template) -->
    <t t-name="pl_template_new" owl="1">
        <div class="container">
            <div class="fin_report">

                <!-- FILTER BAR -->
                <div class="filter_view_pl pt-3 pb-5">
                    <h2 class="text-uppercase" style="padding:10px">
                        <t t-esc="props.action.name"/>
                    </h2>

                    <div style="margin-right: 10px; margin-left: 10px;margin-bottom: 15px;display: flex;">
                        <div class="sub_container_left" style="width:70%;">
                            <div class="report_print">
                                <button type="button" class="btn btn-primary btn-report-print"
                                        t-on-click="printPdf" style="margin-right: 8px;">
                                    Print (PDF)
                                </button>
                                <button type="button" class="btn btn-primary btn-report-print"
                                        t-on-click="print_xlsx">
                                    Export (XLSX)
                                </button>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">

                            <!-- DATE RANGE -->
                            <div>
                                <div class="time_range">
                                    <a type="button" class="dropdown-toggle" data-bs-toggle="dropdown">
                                        <span class="fa fa-calendar"/> Date Range
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <div class="list-group">
                                            <button class="report-filter-button" data-value="month" type="button" t-on-click="applyFilter">This Month</button>
                                            <button class="report-filter-button" data-value="quarter" type="button" t-on-click="applyFilter">This Quarter</button>
                                            <button class="report-filter-button" data-value="year" type="button" t-on-click="applyFilter">This Year</button>

                                            <div class="dropdown-divider"/>

                                            <button class="report-filter-button" data-value="last-month" type="button" t-on-click="applyFilter">Last Month</button>
                                            <button class="report-filter-button" data-value="last-quarter" type="button" t-on-click="applyFilter">Last Quarter</button>
                                            <button class="report-filter-button" data-value="last-year" type="button" t-on-click="applyFilter">Last Year</button>

                                            <div class="dropdown-divider"/>

                                            <label for="start_date">Start Date:</label>
                                            <input type="date" name="start_date" t-on-change="applyFilter"
                                                   style="border:none;border-bottom: 1px solid #000;padding: 5px;outline: none;"/>

                                            <label for="end_date">End Date:</label>
                                            <input type="date" name="end_date" t-on-change="applyFilter"
                                                   style="border:none;border-bottom: 1px solid #000;padding: 5px;outline: none;"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- ACCOUNT FILTER -->
                            <div class="px-2">
                                <div class="account">
                                    <a type="button" class="dropdown-toggle" data-bs-toggle="dropdown">
                                        <span class="fa fa-user"/> Account
                                        <t t-if="state.account">:
                                            <t t-foreach="state.account" t-as="acc" t-key="k">
                                                <t t-esc="acc"/>
                                            </t>
                                        </t>
                                    </a>
                                    <div class="dropdown-menu">
                                        <button class="report-filter-button" data-value="receivable" t-on-click="applyFilter">Receivable</button>
                                        <button class="report-filter-button" data-value="payable" t-on-click="applyFilter">Payable</button>
                                    </div>
                                </div>
                            </div>

                            <!-- OPTIONS -->
                            <div class="px-2">
                                <div class="option">
                                    <a type="button" class="dropdown-toggle" data-bs-toggle="dropdown">
                                        <span class="fa fa-glass"/> Options: Posted Entries
                                    </a>
                                    <div class="dropdown-menu">
                                        <button class="report-filter-button" data-value="draft" t-on-click="applyFilter">Include Draft Entries</button>
                                        <button class="report-filter-button"
                                                type="button" t-ref="unfoldButton" t-on-click="unfoldAll">Unfold All</button>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

            <!-- TABLE -->
            <div class="table_style" style="height: 650px; overflow-y: scroll;">
                <div class="table_view_pl" style="right:20px;width:100%;" t-ref="table_view_pl">

                    <div class="table_main_view">
                        <table cellspacing="0" width="100%">

                            <!-- TABLE HEADER -->
                            <thead>
                            <tr class="o_heading">
                                <th colspan="6"></th>
                                <th>JRNL</th>
                                <th>Account</th>

                                <!-- NEW COLUMNS -->
                                <th>Products</th>
                                <th>Price</th>
                                <th>Quantity</th>

                                <th>Ref</th>
                                <th>Due Date</th>
                                <th>Matching Number</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Amount Currency</th>
                                <th>Balance</th>
                            </tr>
                            </thead>

                            <!-- TABLE BODY -->
                            <tbody t-ref="tbody">
                            <t t-if="state.partners">
                                <t t-set="i" t-value="0"/>

                                <t t-foreach="state.partners" t-as="partner" t-key="partner_index">
                                    <t t-set="i" t-value="i + 1"/>

                                    <!-- PARTNER HEADER ROW -->
                                    <tr class="border-bottom border-dark border-gainsboro">
                                        <th>
                                            <div data-bs-toggle="collapse"
                                                 t-attf-href="#partner-{{i}}"
                                                 class="ms-3 collapsed">
                                                <a class="btn header o_heading">
                                                    <span class="toggle-icon">
                                                        <i class="fa fa-caret-down"/>
                                                    </span>
                                                    <t t-esc="partner"/>
                                                </a>
                                            </div>
                                        </th>
                                        <th colspan="5" class="p-1">
                                            <button t-att-data-id="state.total[partner]['partner_id']"
                                                    class="btn bg-secondary" t-on-click="openPartner">
                                                Open Partner
                                            </button>

                                            <button style="margin-left: 3px"
                                                    t-att-data-id="state.total[partner]['partner_id']"
                                                    class="btn bg-secondary"
                                                    t-on-click="gotoJournalItem">
                                                Journal Items
                                            </button>
                                        </th>

                                        <th></th>
                                        <th></th>

                                        <!-- EMPTY NEW COLUMNS -->
                                        <th></th><th></th><th></th>

                                        <th></th><th></th><th></th>

                                        <th>
                                            <t t-esc="state.total[partner]['currency_id']"/>
                                            <t t-esc="state.total[partner]['total_debit_display']"/>
                                        </th>
                                        <th>
                                            <t t-esc="state.total[partner]['currency_id']"/>
                                            <t t-esc="state.total[partner]['total_credit_display']"/>
                                        </th>
                                        <th></th>
                                        <th>
                                            <t t-esc="state.total[partner]['currency_id']"/>
                                            <t t-esc="(state.total[partner]['total_debit'] - state.total[partner]['total_credit']).toFixed(2)"/>
                                        </th>
                                    </tr>

                                    <!-- PARTNER LINES -->
                                    <t t-foreach="state.data[partner]" t-as="val" t-key="vl">
                                        <tr class="border-bottom border-gainsboro collapse"
                                            t-attf-id="partner-{{i}}"
                                            t-att-data-id="val[0]['move_id'][0]">

                                            <th colspan="6">
                                                <t t-esc="val[0]['date']"/>
                                            </th>

                                            <th><t t-esc="val[0]['jrnl']"/></th>
                                            <th><t t-esc="val[0]['code']"/></th>

                                            <!-- NEW DATA COLUMNS -->
                                            <th style="white-space: pre-line;">
                                                <t t-esc="val[0]['products']"/>
                                            </th>
                                            <th style="white-space: pre-line;">
                                                <t t-esc="val[0]['product_prices']"/>
                                            </th>
                                            <th style="white-space: pre-line;">
                                                <t t-esc="val[0]['product_quantities']"/>
                                            </th>

                                            <th><t t-esc="val[0]['move_name']"/></th>
                                            <th><t t-esc="val[0]['date_maturity']"/></th>
                                            <th><t t-esc="val[0]['matching_number']"/></th>

                                            <th>
                                                <t t-if="val[0]['debit']"
                                                   t-esc="state.total[partner]['currency_id']"/>
                                                <t t-esc="val[0]['debit_display']"/>
                                            </th>

                                            <th>
                                                <t t-if="val[0]['credit']"
                                                   t-esc="state.total[partner]['currency_id']"/>
                                                <t t-esc="val[0]['credit_display']"/>
                                            </th>

                                            <th>
                                                <t t-if="val[0]['amount_currency']"
                                                   t-esc="state.total[partner]['currency_id']"/>
                                                <t t-esc="val[0]['amount_currency_display']"/>
                                            </th>

                                            <th></th>
                                        </tr>
                                    </t>

                                </t>
                            </t>

                            <!-- GRAND TOTAL -->
                            <tr>
                                <th></th>
                                <th colspan="13" class="o_heading">Total</th>
                                <th class="o_heading">
                                    <t t-esc="state.currency"/> <t t-out="state.total_debit_display"/>
                                </th>
                                <th class="o_heading">
                                    <t t-esc="state.currency"/> <t t-out="state.total_credit_display"/>
                                </th>
                                <th></th>
                                <th class="o_heading">
                                    <t t-esc="state.currency"/>
                                    <t t-out="(state.total_debit - state.total_credit).toFixed(2)"/>
                                </th>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- FOOT NOTES -->
            <div class="foot_note">
                <t t-set="count" t-value="1"/>
                <t t-foreach="state.message_list" t-as="message" t-key="idx">
                    <t t-out="count"/>. <t t-out="message['message']"/>
                    <i t-att-id="message['id']" class="fa fa-trash" t-on-click="deleteNote"
                       style="margin-left: 1%;"/>
                    <br/>
                    <t t-set="count" t-value="count + 1"/>
                </t>
            </div>

        </div>
    </t>
</templates>
