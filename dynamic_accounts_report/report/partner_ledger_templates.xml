<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Template for Partner Ledger. -->
    <template id="partner_ledger">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="data_report_margin_top" t-value="12"/>
                <t t-set="data_report_header_spacing" t-value="9"/>
                <t t-set="data_report_dpi" t-value="110"/>

                <div class="page">
                    <h3>
                        <center>
                            <b><span t-esc="report_name"/></b>
                        </center>
                    </h3>
                    <br/>
                    <br/>

                    <!-- Filters header -->
                    <div class="filters">
                        <table class="table table-sm table-reports">
                            <thead class="filter_table" style="background:#808080;">
                                <tr>
                                    <th>Date Range</th>
                                    <th>Partner</th>
                                    <th>Account</th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                            <tbody style="font-size:11px;font-weight:100;">
                                <tr>
                                    <th>
                                        <t t-if="filters['start_date']"
                                           t-out="filters['start_date']"/>
                                        <t t-if="filters['end_date']">
                                            to
                                            <t t-out="filters['end_date']"/>
                                        </t>
                                    </th>
                                    <th>
                                        <t t-foreach="filters['partner']"
                                           t-as="selected_partner"
                                           t-key="partner_index">
                                            <t t-out="selected_partner['display_name']"/>,
                                        </t>
                                    </th>
                                    <th>
                                        <t t-foreach="filters['account']"
                                           t-as="selected_account"
                                           t-key="account_index">
                                            <t t-out="selected_account"/>,
                                        </t>
                                    </th>
                                    <th>
                                        <t t-foreach="filters['options']"
                                           t-as="selected_options"
                                           t-key="options_index">
                                            <t t-out="selected_options"/>,
                                        </t>
                                    </th>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <br/>
                    <br/>
                    <br/>

                    <!-- Partners loop -->
                    <t t-if="partners">
                        <t t-foreach="partners"
                           t-as="partner"
                           t-key="partner_index">

                            <table class="table table-sm table-reports">
                                <thead style="background:#808080;">
                                    <tr>
                                        <!-- empty space used in original template -->
                                        <th style="width:10%" colspan="6"/>
                                        <th style="width:8%">JRNL</th>
                                        <th style="width:8%">Account</th>
                                        <!-- NEW columns -->
                                        <th style="width:14%">Products</th>
                                        <th style="width:8%">Price</th>
                                        <th style="width:8%">Quantity</th>
                                        <!-- existing -->
                                        <th style="width:10%">Ref</th>
                                        <th style="width:10%">Due Date</th>
                                        <th style="width:10%">Matching Number</th>
                                        <th style="width:10%">Debit</th>
                                        <th style="width:10%">Credit</th>
                                        <th style="width:10%">Amount Currency</th>
                                        <th style="width:10%">Balance</th>
                                    </tr>
                                </thead>

                                <tbody style="font-size:11px;font-weight:100;">

                                    <!-- Partner total header row -->
                                    <tr class="border-bottom" style="background:#D3D3D3;">
                                        <!-- span across partner name + new product columns etc. -->
                                        <th colspan="12"
                                            style="border:0px solid transparent;border-left: thin solid #dee2e6;">
                                            <div class="ms-3">
                                                <span class="fw-bolder">
                                                    <t t-if="partner != 'false'">
                                                        <strong><b><t t-esc="partner"/></b></strong>
                                                    </t>
                                                    <t t-else="">
                                                        <span>Unknown Partner</span>
                                                    </t>
                                                </span>
                                            </div>
                                        </th>

                                        <!-- totals -->
                                        <th style="width:10% border:0px solid transparent;"/>
                                        <th style="width:10% border:0px solid transparent;"/>
                                        <th style="width:10% border:0px solid transparent;">
                                            <strong>
                                                <span>
                                                    <t t-if="total[partner]['total_debit']"
                                                       t-esc="total[partner]['currency_id']"/>
                                                    <t t-if="total[partner]['total_debit']"
                                                       t-esc="total[partner]['total_debit_display']"/>
                                                </span>
                                            </strong>
                                        </th>
                                        <th style="width:10% border:0px solid transparent;">
                                            <strong>
                                                <span>
                                                    <t t-if="total[partner]['total_credit']"
                                                       t-esc="total[partner]['currency_id']"/>
                                                    <t t-if="total[partner]['total_credit']"
                                                       t-esc="total[partner]['total_credit_display']"/>
                                                </span>
                                            </strong>
                                        </th>
                                        <th style="width:10% border:0px solid transparent;"/>
                                        <th style="width:10% border:0px solid transparent;border-right: thin solid #dee2e6;">
                                            <strong>
                                                <span class="fw-bolder">
                                                    <t t-esc="total[partner]['currency_id']"/>
                                                    <t t-esc="total[partner]['total_debit'] - total[partner]['total_credit']"/>
                                                </span>
                                            </strong>
                                        </th>
                                    </tr>

                                    <!-- Initial balance row (kept same structure, just matches new column count) -->
                                    <t t-set="j" t-value="0"/>
                                    <t t-foreach="partners"
                                       t-as="partner_initial"
                                       t-key="partner_initial_index">
                                        <t t-set="j" t-value="j + 1"/>
                                        <t t-if="j == 1 and total[partner]['initial_balance'] != 0">
                                            <tr>
                                                <th colspan="6">
                                                    <span style="gap: 12px;display: flex;"/>
                                                </th>
                                                <!-- JRNL + Account + Products + Price + Quantity -->
                                                <th/>
                                                <th/>
                                                <th/>
                                                <th/>
                                                <th/>
                                                <!-- Ref -->
                                                <th>
                                                    <span>
                                                        <t t-esc="total[partner]['move_name']"/>
                                                    </span>
                                                </th>
                                                <!-- Due / Matching -->
                                                <th/>
                                                <th/>
                                                <!-- Debit / Credit / Amount currency / Balance -->
                                                <th>
                                                    <span>
                                                        <t t-esc="total[partner]['initial_debit']"/>
                                                    </span>
                                                </th>
                                                <th>
                                                    <span>
                                                        <t t-esc="total[partner]['initial_credit']"/>
                                                    </span>
                                                </th>
                                                <th/>
                                                <th>
                                                    <span>
                                                        <t t-esc="total[partner]['initial_balance']"/>
                                                    </span>
                                                </th>
                                            </tr>
                                        </t>
                                    </t>

                                    <!-- Lines for this partner -->
                                    <t t-foreach="data[partner]"
                                       t-as="valuelist"
                                       t-key="valuelist_index">
                                        <tr class="border-bottom">
                                            <!-- date -->
                                            <th colspan="6" style="width:10%">
                                                <span>
                                                    <t t-esc="valuelist[0]['date']"/>
                                                </span>
                                            </th>

                                            <!-- JRNL -->
                                            <th style="width:8%">
                                                <span>
                                                    <t t-esc="valuelist[0]['jrnl']"/>
                                                </span>
                                            </th>

                                            <!-- Account -->
                                            <th style="width:8%">
                                                <span>
                                                    <t t-esc="valuelist[0]['code']"/>
                                                </span>
                                            </th>

                                            <!-- NEW: Products -->
                                            <th style="width:14%; white-space: pre-line;">
                                                <span>
                                                    <t t-if="valuelist[0].get('products')"
                                                       t-esc="valuelist[0]['products']"/>
                                                </span>
                                            </th>

                                            <!-- NEW: Price -->
                                            <th style="width:8%; white-space: pre-line;">
                                                <span>
                                                    <t t-if="valuelist[0].get('product_prices')"
                                                       t-esc="valuelist[0]['product_prices']"/>
                                                </span>
                                            </th>

                                            <!-- NEW: Quantity -->
                                            <th style="width:8%; white-space: pre-line;">
                                                <span>
                                                    <t t-if="valuelist[0].get('product_quantities')"
                                                       t-esc="valuelist[0]['product_quantities']"/>
                                                </span>
                                            </th>

                                            <!-- Ref -->
                                            <th style="width:10%">
                                                <span>
                                                    <t t-if="valuelist[0]['move_name']"
                                                       t-esc="valuelist[0]['move_name']"/>
                                                </span>
                                            </th>

                                            <!-- Due Date -->
                                            <th style="width:10%">
                                                <span>
                                                    <t t-if="valuelist[0]['date_maturity']"
                                                       t-esc="valuelist[0]['date_maturity']"/>
                                                </span>
                                            </th>

                                            <!-- Matching Number -->
                                            <th style="width:10%">
                                                <span>
                                                    <t t-if="valuelist[0]['matching_number']"
                                                       t-esc="valuelist[0]['matching_number']"/>
                                                </span>
                                            </th>

                                            <!-- Debit -->
                                            <th style="width:10%">
                                                <span>
                                                    <t t-if="valuelist[0]['debit']"
                                                       t-esc="total[partner]['currency_id']"/>
                                                    <t t-if="valuelist[0]['debit']"
                                                       t-esc="valuelist[0]['debit_display']"/>
                                                </span>
                                            </th>

                                            <!-- Credit -->
                                            <th style="width:10%">
                                                <span>
                                                    <t t-if="valuelist[0]['credit']"
                                                       t-esc="total[partner]['currency_id']"/>
                                                    <t t-if="valuelist[0]['credit']"
                                                       t-esc="valuelist[0]['credit_display']"/>
                                                </span>
                                            </th>

                                            <!-- Amount Currency -->
                                            <th style="width:10%">
            <span>
                <t t-if="valuelist[0]['amount_currency']"
                   t-esc="total[partner]['currency_id']"/>
                <t t-if="valuelist[0]['amount_currency']"
                   t-esc="valuelist[0]['amount_currency_display']"/>
            </span>
                                            </th>

                                            <!-- Balance (kept empty, same as original) -->
                                            <th style="width:10%"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>

                    <!-- Grand totals footer -->
                    <table class="table table-sm table-reports">
                        <tbody>
                            <tr>
                                <th style="width:60%;">Total</th>
                                <th style="width:10%">
                                    <t t-out="grand_total['currency']"/>
                                    <t t-out="grand_total['total_debit_display']"/>
                                </th>
                                <th style="width:10%">
                                    <t t-out="grand_total['currency']"/>
                                    <t t-out="grand_total['total_credit_display']"/>
                                </th>
                                <th style="width:10%"/>
                                <th style="width:10%">
                                    <t t-out="grand_total['currency']"/>
                                    <t t-if="grand_total['total_debit'] and grand_total['total_credit']">
                                        <t t-out="grand_total['total_debit'] - grand_total['total_credit']"/>
                                    </t>
                                </th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
