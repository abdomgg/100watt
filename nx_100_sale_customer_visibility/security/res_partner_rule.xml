<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Cleanup old rules -->
    <delete model="ir.rule" search="[('name', 'ilike', 'Sales: Customers of My Team')]"/>
    <delete model="ir.rule" search="[('name', 'ilike', 'Sales: Own Partner Always Accessible')]"/>
    <delete model="ir.rule" search="[('name', 'ilike', 'Team Leader: Full Access to Contacts')]"/>
    <delete model="ir.rule" search="[('name', 'ilike', 'Team Leader: Team Member Partners')]"/>
    <delete model="ir.rule" search="[('name', 'ilike', 'Team Leader: Team Customers and Internal Users')]"/>

    <!-- Team Leader: Own customers + customers assigned to salespeople they lead + related contacts + can create new -->
    <record id="rule_res_partner_team_leader" model="ir.rule">
        <field name="name">Team Leader: Team Customers Only</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[
            '|', '|',
                ('id', '=', user.partner_id.id),
                ('id', '=', False),
                '&amp;',
                    '|',
                        ('user_id', '!=', False),
                        ('parent_id.user_id', '!=', False),
                    '|', '|', '|',
                        ('user_id', '=', user.id),
                        ('user_id.sale_team_id.user_id', '=', user.id),
                        ('parent_id.user_id', '=', user.id),
                        ('parent_id.user_id.sale_team_id.user_id', '=', user.id)
        ]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="global" eval="True"/>
    </record>


    <!-- Salesperson: customers assigned to them + related contacts + can create new -->
    <record id="rule_sales_team_customers_only" model="ir.rule">
        <field name="name">Salesperson: Own Customers Only</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[
            '|', '|',
                ('id', '=', user.partner_id.id),
                ('id', '=', False),
                '&amp;',
                    '|',
                        ('user_id', '!=', False),
                        ('parent_id.user_id', '!=', False),
                    '|',
                        ('user_id', '=', user.id),
                        ('parent_id.user_id', '=', user.id)
        ]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman')), (3, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="global" eval="True"/>
    </record>

    <!-- Admin: full access -->
    <record id="rule_res_partner_admin_full_access" model="ir.rule">
        <field name="name">Admin: Full Access to Contacts</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="global" eval="True"/>
    </record>

    <!-- Internal User: basic access to create contacts -->
    <record id="rule_res_partner_internal_user" model="ir.rule">
        <field name="name">Internal User: Create Contacts</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">[
            '|',
                ('id', '=', user.partner_id.id),
                ('id', '=', False)
        ]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="global" eval="True"/>
    </record>

</odoo>
