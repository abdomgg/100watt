<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Cleanup old rules if any -->
    <delete model="ir.rule" search="[('name', 'ilike', 'CRM: Team Leader')]"/>
    <delete model="ir.rule" search="[('name', 'ilike', 'CRM: Salesperson')]"/>

    <!-- Team Leader: Own opportunities + opportunities of team members ONLY -->
    <record id="rule_crm_lead_team_leader" model="ir.rule">
        <field name="name">CRM: Team Leader - Own and Team Opportunities</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="domain_force">[
            '&amp;',
                ('user_id', '!=', False),
                '|',
                    ('user_id', '=', user.id),
                    ('user_id.sale_team_id.user_id', '=', user.id)
        ]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="global" eval="True"/>
    </record>

    <!-- Salesperson: Only own opportunities -->
    <record id="rule_crm_lead_salesperson" model="ir.rule">
        <field name="name">CRM: Salesperson - Own Opportunities Only</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="domain_force">[
            '&amp;',
                ('user_id', '!=', False),
                ('user_id', '=', user.id)
        ]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="global" eval="True"/>
    </record>

    <!-- Admin: full access -->
    <record id="rule_crm_lead_admin_full_access" model="ir.rule">
        <field name="name">CRM: Admin - Full Access</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="global" eval="True"/>
    </record>

</odoo>
