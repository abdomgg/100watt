<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the partner form view to make fields required -->
        <record id="view_partner_form_required_fields" model="ir.ui.view">
            <field name="name">res.partner.form.required.fields</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Make name field required with indicator -->
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                
                <!-- Make phone field required with indicator -->
                <xpath expr="//field[@name='phone']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                
                <!-- Make street field required with indicator -->
                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

