<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the partner form view to make fields required -->
        <record id="view_partner_form_required_fields" model="ir.ui.view">
            <field name="name">res.partner.form.required.fields</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Make name field required with indicator -->
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                
                <!-- Make phone field required for customers -->
                <xpath expr="//field[@name='phone']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                
                <!-- Ensure street/address field is NOT required -->
                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
            </field>
        </record>
        
        <!-- Inherit the user simple form view (used for creating new users) to ensure phone is NOT required -->
        <record id="view_users_simple_form_no_phone_required" model="ir.ui.view">
            <field name="name">res.users.simple.form.no.phone.required</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_simple_form"/>
            <field name="arch" type="xml">
                <!-- Ensure phone field is NOT required in user form -->
                <xpath expr="//group[@name='phone_numbers']//field[@name='phone']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

