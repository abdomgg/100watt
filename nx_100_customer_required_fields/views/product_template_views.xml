<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the product template form view to make company field required -->
        <record id="view_product_template_form_company_required" model="ir.ui.view">
            <field name="name">product.template.form.company.required</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Make company_id field required with indicator -->
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
