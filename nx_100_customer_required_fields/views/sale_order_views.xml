<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the sale order form view to add VAT field -->
        <record id="view_order_form_vat" model="ir.ui.view">
            <field name="name">sale.order.form.vat</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Add VAT field after partner_id -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="customer_vat" placeholder="أدخل الرقم الضريبي"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

