<odoo>
    <record id="account_payment_form_inherit_purchase" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.purchase</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="purchase_id" readonly="1"/>
            </xpath>

            <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="groups">nx_gts_purchase_payment.group_payment_confirm_reset</attribute>
            </xpath>

            <xpath expr="//button[@name='action_draft']" position="attributes">
                <attribute name="groups">nx_gts_purchase_payment.group_payment_confirm_reset</attribute>
            </xpath>
        </field>
    </record>
</odoo>