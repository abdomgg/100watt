<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_product_code" model="ir.ui.view">
        <field name="name">sale.order.form.product.code</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//form//field[@name='product_id']" position="before">
                <field name="product_code" context="{'default_sale_ok': True}" options="{'no_open': True}" placeholder="Search a product"/>
            </xpath>
            <xpath expr="//page[@name='order_lines']//list//field[@name='product_id']" position="before">
                <field name="product_code" optional="show" context="{'default_sale_ok': True}" options="{'no_open': True}"/>
            </xpath>
        </field>
    </record>
</odoo>