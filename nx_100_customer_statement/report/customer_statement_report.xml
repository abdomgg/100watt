<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_customer_statement_pdf" model="ir.actions.report">
            <field name="name">Customer Statement PDF</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nx_100_customer_statement.customer_statement_pdf</field>
            <field name="report_file">nx_100_customer_statement.customer_statement_pdf</field>
            <field name="print_report_name">'Customer Statement - %s' % (object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>

       <template id="customer_statement_pdf">
    <t t-call="web.html_container">
        <t t-set="partner_index" t-value="0"/>
        <t t-foreach="docs" t-as="partner">
            <t t-set="statement_lines" t-value="all_statement_lines[partner_index]"/>
            <t t-set="partner_index" t-value="partner_index + 1"/>

            <div class="page">
                <div class="oe_structure"/>

                <div class="row">
                    <div class="col-12">
                        <h2>Customer Statement</h2>
                        <h3 t-esc="partner.name"/>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Invoice Date</th>
                                    <th>Invoice No.</th>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Line Subtotal</th>
                                    <th>Due Date</th>
                                    <th>Total Amount</th>
                                    <th>Amount Due</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="not statement_lines">
                                    <tr>
                                        <td colspan="9" style="text-align: center;">
                                            No invoice lines found. Make sure you are viewing a customer
                                            with customer invoices (not a vendor).
                                        </td>
                                    </tr>
                                </t>
                                <t t-foreach="statement_lines" t-as="line">
                                    <tr>
                                        <td t-esc="line.invoice_date or ''"/>
                                        <td t-esc="line.invoice_name or ''"/>

                                        <!-- Product column - Blank if product is invoice number -->
                                        <td>
                                            <t t-if="line.product_name and 'INV' not in line.product_name">
                                                <t t-esc="line.product_name or ''"/>
                                            </t>
                                            <t t-if="line.product_name and 'INV' in line.product_name">
                                                <!-- Blank out if the product is an invoice number -->
                                            </t>
                                        </td>

                                        <!-- Price column - Leave blank for payment-related entries -->
                                        <td t-esc="line.price_unit or ''"/>

                                        <!-- Quantity column - Leave blank for payment-related entries -->
                                        <td t-esc="line.quantity or ''"/>

                                        <!-- Line Subtotal column -->
                                        <td t-esc="line.price_subtotal or ''"/>

                                        <!-- Due Date column -->
                                        <td t-esc="line.invoice_date_due or ''"/>

                                        <!-- Total Amount column -->
                                        <td t-esc="line.total_amount or ''"/>

                                        <!-- Amount Due column -->
                                        <td t-esc="line.amount_residual or ''"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </t>
    </t>
</template>

    </data>
</odoo>
