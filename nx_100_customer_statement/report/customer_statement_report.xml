<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_customer_statement_pdf" model="ir.actions.report">
            <field name="name">Customer Statement PDF</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nx_100_customer_statement.customer_statement_pdf</field>
            <field name="report_file">nx_100_customer_statement.customer_statement_pdf</field>
            <field name="print_report_name">'Customer Statement - %s' % (object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>


        <template id="customer_statement_pdf">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="partner">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-12">
                                <h2>Customer Statement</h2>
                                <h3 t-esc="partner.name"/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Invoice Date</th>
                                            <th>Invoice No.</th>
                                            <th>Due Date</th>
                                            <th>Total Amount</th>
                                            <th>Amount Due</th>
                                            <th>Balance</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="balance" t-value="0.0"/>
                                        <t t-foreach="partner.invoice_ids.sorted('invoice_date', reverse=True)" t-as="invoice">
                                            <t t-set="balance" t-value="balance + invoice.amount_total_signed"/>
                                            <tr>
                                                <td t-esc="invoice.invoice_date"/>
                                                <td t-esc="invoice.name"/>
                                                <td t-esc="invoice.invoice_date_due"/>
                                                <td t-esc="invoice.amount_total_signed"/>
                                                <td t-esc="invoice.amount_residual_signed"/>
                                                <td t-esc="balance"/>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>

