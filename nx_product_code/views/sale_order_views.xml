<odoo>
    <record id="sale_order_line_reference" model="ir.ui.view">
        <field name="name">sale.order.line.reference</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_template_id']" position="after">
                <field name="product_code_id" string="Product Code" options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
