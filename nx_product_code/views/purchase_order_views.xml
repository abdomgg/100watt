<odoo>
    <record id="purchase_order_line_reference" model="ir.ui.view">
        <field name="name">purchase.order.line.reference</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                <field name="product_code_id" string="Product Code" options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
